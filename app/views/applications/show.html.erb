<center><h1>Applicants Information</h1></center?
<p>Name: <%= @application.name %></p>
<p>Street Address: <%= @application.street_address %></p>
<p>City: <%= @application.city %></p>
<p>State: <%= @application.state %></p>
<p>Zip Code: <%= @application.zip_code %></p>
<p>Description: <%= @application.description %></p>

<p>Status: <%= @application.status %></p>


<% if @application.status == "In Progress" && @application.pets.count > 0 %>
  <%= form_with url: "/applications/#{@application.id}", method: :get , local: true do |f| %>
  <%= f.label :search_for_pets_by_name %>
  <%= f.text_field :search %>
  <%= f.submit "Submit" %>
  <% end %>
<% else @application.status == "In Progress" && @application.pets.count == 0 %>
  <p><%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
    <%= f.label :search_for_pets_by_name %>
    <%= f.text_field :search %>
    <%= f.submit "Submit"%>
    <% end %></p>
<% end %>

<% @pets.each do |pet| %>
<%= pet.name %><%= button_to "Adopt this pet", "/applications/#{@application.id}", method: :patch %>
<% end %>
